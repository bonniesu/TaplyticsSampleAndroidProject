<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="taplytics.newqaapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TAPLYTICS"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="443dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:backgroundTint="@color/colorBackground"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="Left"
                android:onClick="onSelectLeft" />

            <Button
                android:id="@+id/button4"
                android:backgroundTint="@color/colorBackground"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:text="Right"
                android:onClick="onSelectRight"/>
        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:backgroundTint="@color/colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            android:text="Top Button"
            android:onClick="onSelectTop"/>

        <Button
            android:id="@+id/button8"
            android:backgroundTint="@color/colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Regression Campaign"
            android:onClick="RegressionCampaign"/>

        <Button
            android:id="@+id/button2"
            android:backgroundTint="@color/colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.72"
            android:text="Bottom Button"
            android:onClick="onSelectBottom"/>

        <Button
            android:id="@+id/view_pager_recycler_view_button"
            android:backgroundTint="@color/colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_pager_recycler_view" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
